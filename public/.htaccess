<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Block direct access to /public/images/ paths - return 403 Forbidden
    # This must come BEFORE file serving rules
    # This catches requests when document root is project root
    RewriteCond %{REQUEST_URI} ^/public/images/ [NC]
    RewriteRule .* - [F,L]
    
    # Also check THE_REQUEST header for /public/images/ pattern
    RewriteCond %{THE_REQUEST} \s[^?]*/public/images/ [NC]
    RewriteRule .* - [F,L]
    
    # Block if accessing images folder directly via /public/images/ URL pattern
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteCond %{REQUEST_URI} ^/public/images/ [NC]
    RewriteRule .* - [F,L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
